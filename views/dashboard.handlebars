              <input type="checkbox" class="checkTask" data-ReminderId="{{id}}" >
              {{task}}{{#if isRecurring}} (every {{numPeriods}} {{timePeriod}}{{#if plural}}s{{/if}})</i>{{/if}}   –  due: {{nextDue}}{{#if note}}
              <span style="font-size:75%; font-style:italic; color:grey;">
                      {{note}}
                </span>
              {{/if}}
            </li>
          {{/each}}

